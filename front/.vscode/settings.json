{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    ".idea": true,
    ".angular": true,
    "node_modules": false,
  },
  "search.exclude": {
    ".angular": true,
    "dist": true,
    "node_modules": true,
    "package-lock.json": true,
  },
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "editor.renderWhitespace": "all",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.addMissingImports": "explicit",
    "source.removeUnusedImports": "explicit"
  },
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": "explicit"
    }
  },
  "[markdown]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.markdownlint": "explicit"
    }
  },
  "eslint.useFlatConfig": true,
  "prettier.enable": true,
  "stylelint.validate": ["css", "scss"],
  "stylelint.customSyntax": "postcss-scss",
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "window.title": "${dirty} ${activeEditorShort}${separator}Lucca BnB",
  "peacock.color": "#FF9361",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#ffb694",
    "activityBar.background": "#ffb694",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#009f33",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#ffb694",
    "statusBar.background": "#ff9361",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#ff702e",
    "statusBarItem.remoteBackground": "#ff9361",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#ff9361",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#ff936199",
    "titleBar.inactiveForeground": "#15202b99"
  },
}